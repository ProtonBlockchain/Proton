#!/bin/bash
#
#  protond The Proton server.
#
#
# chkconfig: 345 80 20
# description: protond
# processname: protond
#

# Source function library.
. /etc/init.d/functions

# you can override defaults in /etc/sysconfig/protond, see below
if [ -f /etc/sysconfig/protond ]; then
        . /etc/sysconfig/protond
fi

RETVAL=0

prog=protond
# you can override the lockfile via BITCOIND_LOCKFILE in /etc/sysconfig/protond
lockfile=${BITCOIND_LOCKFILE-/var/lock/subsys/protond}

# protond defaults to /usr/bin/protond, override with BITCOIND_BIN
bitcoind=${BITCOIND_BIN-/usr/bin/protond}

# protond opts default to -disablewallet, override with BITCOIND_OPTS
bitcoind_opts=${BITCOIND_OPTS}

start() {
    echo -n $"Starting $prog: "
    daemon $DAEMONOPTS $bitcoind $bitcoind_opts
    RETVAL=$?
    echo
    [ $RETVAL -eq 0 ] && touch $lockfile
    return $RETVAL
}

stop() {
    echo -n $"Stopping $prog: "
    killproc $prog
    RETVAL=$?
    echo
    [ $RETVAL -eq 0 ] && rm -f $lockfile
    return $RETVAL
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    status)
        status $prog
        ;;
    restart)
        stop
        start
        ;;
    *)
        echo "Usage: service $prog {start|stop|status|restart}"
        exit 1
        ;;
esac
